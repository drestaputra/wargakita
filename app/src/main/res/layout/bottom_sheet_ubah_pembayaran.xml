<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F1F1F1"
    android:elevation="10dp"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            android:id="@+id/BtnClose"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:backgroundTint="#FFFFFF"
            android:elevation="3dp"
            android:fontFamily="@font/asap_bold"
            android:text="X"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="8"
                android:background="@drawable/bg_gradient_gray"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <Spinner
                    android:id="@+id/SpRekening"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:overlapAnchor="false"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="-5dp"
                android:background="@color/blue_50"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="Rekening"
                android:textColor="@color/txBlack" />
        </RelativeLayout>

        <Button
            android:id="@+id/BtnUbahPembayaran"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_gradient_success"
            android:fontFamily="@font/asap_bold"
            android:text="Ubah Pembayaran"
            android:textColor="@color/colorWhite">

        </Button>

    </LinearLayout>


</LinearLayout>